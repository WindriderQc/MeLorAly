<!-- Onboarding - Children (Step 2/5) -->
<div class="min-h-screen bg-background-light flex flex-col">
    <!-- Progress Stepper -->
    <div class="bg-white shadow-sm sticky top-0 z-10">
        <div class="max-w-3xl mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 opacity-75">
                    <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center">
                        <span class="material-symbols-outlined text-sm filled">check</span>
                    </div>
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Bienvenue</span>
                </div>
                <div class="flex-1 mx-4 h-1 bg-primary rounded"></div>
                
                <div class="flex items-center gap-2">
                    <div class="w-8 h-8 bg-primary text-gray-900 rounded-full flex items-center justify-center font-bold text-sm">2</div>
                    <span class="text-sm font-medium text-gray-900">Enfants</span>
                </div>
                <div class="flex-1 mx-4 h-1 bg-gray-200 rounded"></div>
                
                <div class="flex items-center gap-2 opacity-50">
                    <div class="w-8 h-8 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold text-sm">3</div>
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Adultes</span>
                </div>
                <div class="flex-1 mx-4 h-1 bg-gray-200 rounded"></div>
                
                <div class="flex items-center gap-2 opacity-50">
                    <div class="w-8 h-8 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold text-sm">4</div>
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Espace</span>
                </div>
                <div class="flex-1 mx-4 h-1 bg-gray-200 rounded"></div>
                
                <div class="flex items-center gap-2 opacity-50">
                    <div class="w-8 h-8 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold text-sm">5</div>
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Prêt!</span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Content -->
    <div class="flex-grow px-6 py-12">
        <div class="max-w-2xl mx-auto">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="mb-6 flex justify-center">
                    <div class="w-24 h-24 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center shadow-lg">
                        <span class="material-symbols-outlined text-white filled" style="font-size: 3rem;">child_care</span>
                    </div>
                </div>
                <h1 class="text-3xl md:text-4xl font-black text-gray-900 mb-3">
                    Ajoutons vos enfants
                </h1>
                <p class="text-lg text-gray-600">
                    Commencez par ajouter les enfants de votre famille
                </p>
            </div>
            
            <!-- Error Messages -->
            <% if (locals.messages && locals.messages.error) { %>
                <div class="bg-red-50 border-2 border-red-200 rounded-xl p-4 mb-6">
                    <div class="flex items-start gap-3">
                        <span class="material-symbols-outlined text-red-600 filled">error</span>
                        <div class="flex-1">
                            <% messages.error.forEach(function(error) { %>
                                <p class="text-red-800 font-medium"><%= error %></p>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% } %>
            
            <!-- Main Form -->
            <form method="POST" action="/onboarding/children" id="onboarding-form">
                <!-- Children List -->
                <div id="children-list" class="space-y-4 mb-6">
                    <!-- Child items will be added here dynamically -->
                </div>
                
                <!-- Add Child Form -->
                <div class="bg-white rounded-2xl shadow-sm p-6 mb-6">
                    <div id="add-child-inputs">
                        <div class="grid sm:grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block text-sm font-bold text-gray-700 mb-2">Prénom</label>
                                <input type="text" id="child-first-name"
                                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary focus:outline-none transition">
                            </div>
                            <div>
                                <label class="block text-sm font-bold text-gray-700 mb-2">Nom</label>
                                <input type="text" id="child-last-name"
                                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary focus:outline-none transition">
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label class="block text-sm font-bold text-gray-700 mb-2">Date de naissance</label>
                            <input type="date" id="child-birthdate"
                                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary focus:outline-none transition">
                        </div>
                        
                        <button type="button" id="add-child-btn"
                            class="w-full bg-primary/10 text-primary border-2 border-primary border-dashed px-6 py-3 rounded-xl font-bold hover:bg-primary/20 transition flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined">add</span>
                            Ajouter cet enfant
                        </button>
                    </div>
                </div>
                
                <!-- Hidden inputs for form submission (populated by JavaScript) -->
                <div id="hidden-inputs"></div>
                
                <!-- Navigation -->
                <div class="flex gap-4">
                    <a href="/onboarding/welcome" 
                        class="flex-1 bg-white text-gray-700 border-2 border-gray-200 px-6 py-4 rounded-full font-bold text-center hover:border-primary transition">
                        Retour
                    </a>
                    <button type="submit" id="next-btn"
                        class="flex-1 bg-primary text-gray-900 px-6 py-4 rounded-full font-bold text-center hover:shadow-xl transition transform hover:scale-105">
                        Continuer
                    </button>
                </div>
            </form>
            
            <p class="text-center text-sm text-gray-500 mt-4">
                Vous pourrez ajouter ou modifier ces informations plus tard
            </p>
        </div>
    </div>
</div>

<script>
// Children management with server-side submission
const childrenList = document.getElementById('children-list');
const addChildBtn = document.getElementById('add-child-btn');
const hiddenInputs = document.getElementById('hidden-inputs');
const onboardingForm = document.getElementById('onboarding-form');
let children = [];

// Load existing children from session (if any)
<% if (locals.formData && formData.length > 0) { %>
    children = <%- JSON.stringify(formData) %>;
    renderChildren();
    updateHiddenInputs();
<% } %>

// Add child button click handler
addChildBtn.addEventListener('click', (e) => {
    e.preventDefault();
    
    const firstName = document.getElementById('child-first-name').value.trim();
    const lastName = document.getElementById('child-last-name').value.trim();
    const birthdate = document.getElementById('child-birthdate').value;
    
    // Validation
    if (!firstName || !lastName || !birthdate) {
        alert('Veuillez remplir tous les champs');
        return;
    }
    
    const child = {
        name: `${firstName} ${lastName}`,
        birthDate: birthdate,
        grade: null // Can be added later
    };
    
    children.push(child);
    renderChildren();
    updateHiddenInputs();
    
    // Clear inputs
    document.getElementById('child-first-name').value = '';
    document.getElementById('child-last-name').value = '';
    document.getElementById('child-birthdate').value = '';
});

// Form submission validation
onboardingForm.addEventListener('submit', (e) => {
    if (children.length === 0) {
        e.preventDefault();
        alert('Veuillez ajouter au moins un enfant avant de continuer');
    }
});

function renderChildren() {
    childrenList.innerHTML = children.map((child, index) => `
        <div class="bg-white rounded-2xl shadow-sm p-4 flex items-center gap-4">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="material-symbols-outlined text-blue-600 filled">child_care</span>
            </div>
            <div class="flex-grow">
                <h3 class="font-bold text-gray-900">${child.name}</h3>
                <p class="text-sm text-gray-500">Né(e) le ${new Date(child.birthDate).toLocaleDateString('fr-FR')}</p>
            </div>
            <button type="button" onclick="removeChild(${index})" class="w-10 h-10 rounded-full hover:bg-red-50 flex items-center justify-center text-red-500 transition">
                <span class="material-symbols-outlined">delete</span>
            </button>
        </div>
    `).join('');
}

function updateHiddenInputs() {
    // Create hidden inputs for each child to submit to server
    hiddenInputs.innerHTML = children.map((child, index) => `
        <input type="hidden" name="children[${index}][name]" value="${child.name}">
        <input type="hidden" name="children[${index}][birthDate]" value="${child.birthDate}">
        <input type="hidden" name="children[${index}][grade]" value="${child.grade || ''}">
    `).join('');
}

function removeChild(index) {
    children.splice(index, 1);
    renderChildren();
    updateHiddenInputs();
}
</script>
