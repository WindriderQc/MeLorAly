<script>
// Simple demo functionality - replace with actual backend integration
const childrenList = document.getElementById('children-list');
const addChildForm = document.getElementById('add-child-form');
let children = [];

addChildForm.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const child = {
        firstName: document.getElementById('child-first-name').value,
        lastName: document.getElementById('child-last-name').value,
        birthdate: document.getElementById('child-birthdate').value
    };
    
    children.push(child);
    renderChildren();
    addChildForm.reset();
});

function renderChildren() {
    childrenList.innerHTML = children.map((child, index) => `
        <div class="bg-white rounded-2xl shadow-sm p-4 flex items-center gap-4">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="material-symbols-outlined text-blue-600 filled">child_care</span>
            </div>
            <div class="flex-grow">
                <h3 class="font-bold text-gray-900">${child.firstName} ${child.lastName}</h3>
                <p class="text-sm text-gray-500">Né(e) le ${new Date(child.birthdate).toLocaleDateString('fr-FR')}</p>
            </div>
            <button onclick="removeChild(${index})" class="w-10 h-10 rounded-full hover:bg-red-50 flex items-center justify-center text-red-500 transition">
                <span class="material-symbols-outlined">delete</span>
            </button>
        </div>
    `).join('');
}

function removeChild(index) {
    children.splice(index, 1);
    renderChildren();
}
</script>
