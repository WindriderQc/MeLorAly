<!-- Onboarding - Adults (Step 3/5) -->
<div class="min-h-screen bg-background-light flex flex-col">
    <!-- Progress Stepper -->
    <div class="bg-white shadow-sm sticky top-0 z-10">
        <div class="max-w-3xl mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-2 opacity-75">
                    <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center">
                        <span class="material-symbols-outlined text-sm filled">check</span>
                    </div>
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Bienvenue</span>
                </div>
                <div class="flex-1 mx-4 h-1 bg-green-500 rounded"></div>
                
                <div class="flex items-center gap-2 opacity-75">
                    <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center">
                        <span class="material-symbols-outlined text-sm filled">check</span>
                    </div>
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Enfants</span>
                </div>
                <div class="flex-1 mx-4 h-1 bg-primary rounded"></div>
                
                <div class="flex items-center gap-2">
                    <div class="w-8 h-8 bg-primary text-gray-900 rounded-full flex items-center justify-center font-bold text-sm">3</div>
                    <span class="text-sm font-medium text-gray-900">Adultes</span>
                </div>
                <div class="flex-1 mx-4 h-1 bg-gray-200 rounded"></div>
                
                <div class="flex items-center gap-2 opacity-50">
                    <div class="w-8 h-8 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold text-sm">4</div>
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Espace</span>
                </div>
                <div class="flex-1 mx-4 h-1 bg-gray-200 rounded"></div>
                
                <div class="flex items-center gap-2 opacity-50">
                    <div class="w-8 h-8 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold text-sm">5</div>
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Prêt!</span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Content -->
    <div class="flex-grow px-6 py-12">
        <div class="max-w-2xl mx-auto">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="mb-6 flex justify-center">
                    <div class="w-24 h-24 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                        <span class="material-symbols-outlined text-white filled" style="font-size: 3rem;">group</span>
                    </div>
                </div>
                <h1 class="text-3xl md:text-4xl font-black text-gray-900 mb-3">
                    Invitez la famille
                </h1>
                <p class="text-lg text-gray-600">
                    Invitez parents, grands-parents et proches à rejoindre l'espace familial
                </p>
            </div>
            
            <!-- Invite Options -->
            <div class="grid sm:grid-cols-2 gap-4 mb-6">
                <button type="button" onclick="toggleInviteSection()" class="bg-white rounded-2xl shadow-sm p-6 hover:shadow-lg transition text-center">
                    <div class="w-16 h-16 mx-auto bg-purple-100 rounded-full flex items-center justify-center mb-3">
                        <span class="material-symbols-outlined text-purple-600 text-3xl filled">mail</span>
                    </div>
                    <h3 class="font-bold text-gray-900 mb-2">Par email</h3>
                    <p class="text-sm text-gray-600">Invitez par adresse email</p>
                </button>
                <div class="bg-gray-50 rounded-2xl shadow-sm p-6 text-center opacity-50">
                    <div class="w-16 h-16 mx-auto bg-gray-200 rounded-full flex items-center justify-center mb-3">
                        <span class="material-symbols-outlined text-gray-500 text-3xl filled">link</span>
                    </div>
                    <h3 class="font-bold text-gray-700 mb-2">Par lien</h3>
                    <p class="text-sm text-gray-600">Bientôt disponible</p>
                </div>
            </div>
            
            <!-- Main Form -->
            <form method="POST" action="/onboarding/adults" id="onboarding-form">
                <!-- CSRF Protection -->
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                
                <!-- Error Messages -->
                <% if (locals.messages && locals.messages.error) { %>
                    <div class="bg-red-50 border-2 border-red-200 rounded-xl p-4 mb-6">
                        <div class="flex items-start gap-3">
                            <span class="material-symbols-outlined text-red-600 filled">error</span>
                            <div class="flex-1">
                                <% messages.error.forEach(function(error) { %>
                                    <p class="text-red-800 font-medium"><%= error %></p>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                <% } %>
                
                <!-- Email Invite Form (Hidden by default) -->
                <div id="invite-email-section" class="bg-white rounded-2xl shadow-sm p-6 mb-6 hidden">
                    <h3 class="font-bold text-gray-900 mb-4 flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">mail</span>
                        Inviter par email
                    </h3>
                    <div id="invite-inputs">
                        <div class="mb-4">
                            <label class="block text-sm font-bold text-gray-700 mb-2">Email</label>
                            <input type="email" id="invite-email"
                                placeholder="exemple@email.com"
                                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary focus:outline-none transition">
                        </div>
                        
                        <div class="mb-4">
                            <label class="block text-sm font-bold text-gray-700 mb-2">Rôle</label>
                            <select id="invite-role"
                                class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary focus:outline-none transition">
                                <option value="parent">Parent</option>
                                <option value="grandparent">Grand-parent</option>
                            </select>
                        </div>
                        
                        <button type="button" id="add-invite-btn"
                            class="w-full bg-primary text-gray-900 px-6 py-3 rounded-xl font-bold hover:shadow-lg transition flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined">add</span>
                            Ajouter cette invitation
                        </button>
                    </div>
                </div>
                
                <!-- Invited Members List -->
                <div id="invited-list" class="space-y-3 mb-6">
                    <!-- Invited members will appear here -->
                </div>
                
                <!-- Hidden inputs for form submission (populated by JavaScript) -->
                <div id="hidden-inputs"></div>
                
                <!-- Navigation -->
                <div class="flex gap-4">
                    <a href="/onboarding/children" 
                        class="flex-1 bg-white text-gray-700 border-2 border-gray-200 px-6 py-4 rounded-full font-bold text-center hover:border-primary transition">
                        Retour
                    </a>
                    <button type="submit"
                        class="flex-1 bg-primary text-gray-900 px-6 py-4 rounded-full font-bold text-center hover:shadow-xl transition transform hover:scale-105">
                        Continuer
                    </button>
                </div>
            </form>            <!-- Email Invite Form (Hidden by default) -->
            <div id="invite-email-section" class="bg-white rounded-2xl shadow-sm p-6 mb-6 hidden">
                <h3 class="font-bold text-gray-900 mb-4 flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary">mail</span>
                    Inviter par email
                </h3>
                <form id="invite-form">
                    <div class="mb-4">
                        <label class="block text-sm font-bold text-gray-700 mb-2">Email</label>
                        <input type="email" id="invite-email" required
                            placeholder="exemple@email.com"
                            class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary focus:outline-none transition">
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-sm font-bold text-gray-700 mb-2">Rôle</label>
                        <select id="invite-role"
                            class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-primary focus:outline-none transition">
                            <option value="parent">Parent</option>
                            <option value="grandparent">Grand-parent</option>
                            <option value="family">Membre de la famille</option>
                        </select>
                    </div>
                    
                    <button type="submit" 
                        class="w-full bg-primary text-gray-900 px-6 py-3 rounded-xl font-bold hover:shadow-lg transition flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined">send</span>
                        Envoyer l'invitation
                    </button>
                </form>
            </div>
            
            <!-- Invited Members List -->
            <div id="invited-list" class="space-y-3 mb-6">
                <!-- Invited members will appear here -->
            </div>
            
            <!-- Navigation -->
            <div class="flex gap-4">
                <a href="/onboarding/children" 
                    class="flex-1 bg-white text-gray-700 border-2 border-gray-200 px-6 py-4 rounded-full font-bold text-center hover:border-primary transition">
                    Retour
                </a>
                <a href="/onboarding/family-space"
                    class="flex-1 bg-primary text-gray-900 px-6 py-4 rounded-full font-bold text-center hover:shadow-xl transition transform hover:scale-105">
                    Continuer
                </a>
            </div>
            
            <p class="text-center text-sm text-gray-500 mt-4">
                Vous pourrez inviter d'autres membres plus tard
            </p>
        </div>
    </div>
</div>

<script>
// Adults/invitations management with server-side submission
const invitedList = document.getElementById('invited-list');
const inviteSection = document.getElementById('invite-email-section');
const addInviteBtn = document.getElementById('add-invite-btn');
const hiddenInputs = document.getElementById('hidden-inputs');
let invited = [];

// Load existing invitations from session (if any)
<% if (locals.formData && formData.length > 0) { %>
    invited = <%- JSON.stringify(formData) %>;
    renderInvited();
    updateHiddenInputs();
<% } %>

// Toggle invite section
function toggleInviteSection() {
    inviteSection.classList.toggle('hidden');
}

// Add invitation button click handler
addInviteBtn.addEventListener('click', (e) => {
    e.preventDefault();
    
    const email = document.getElementById('invite-email').value.trim();
    const role = document.getElementById('invite-role').value;
    
    // Validation
    if (!email) {
        alert('Veuillez saisir une adresse email');
        return;
    }
    
    // Check for duplicates
    if (invited.some(inv => inv.email.toLowerCase() === email.toLowerCase())) {
        alert('Cette personne a déjà été invitée');
        return;
    }
    
    const invitation = {
        email: email,
        role: role,
        name: null
    };
    
    invited.push(invitation);
    renderInvited();
    updateHiddenInputs();
    
    // Clear inputs
    document.getElementById('invite-email').value = '';
    document.getElementById('invite-role').value = 'parent';
    
    // Hide invite section
    inviteSection.classList.add('hidden');
});

function renderInvited() {
    const roleLabels = {
        parent: 'Parent',
        grandparent: 'Grand-parent'
    };
    
    if (invited.length === 0) {
        invitedList.innerHTML = `
            <div class="text-center py-8 text-gray-500">
                <span class="material-symbols-outlined text-4xl mb-2 opacity-50">group_add</span>
                <p class="text-sm">Aucune invitation pour le moment</p>
                <p class="text-xs">Vous pouvez continuer et inviter des membres plus tard</p>
            </div>
        `;
        return;
    }
    
    invitedList.innerHTML = invited.map((member, index) => `
        <div class="bg-white rounded-xl shadow-sm p-4 flex items-center gap-4">
            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="material-symbols-outlined text-purple-600">person</span>
            </div>
            <div class="flex-grow">
                <h4 class="font-bold text-gray-900 text-sm">${member.email}</h4>
                <p class="text-xs text-gray-500">${roleLabels[member.role]}</p>
            </div>
            <button type="button" onclick="removeInvitation(${index})" class="w-9 h-9 rounded-full hover:bg-red-50 flex items-center justify-center text-red-500 transition">
                <span class="material-symbols-outlined text-sm">delete</span>
            </button>
        </div>
    `).join('');
}

function updateHiddenInputs() {
    // Create hidden inputs for each invitation to submit to server
    hiddenInputs.innerHTML = invited.map((member, index) => `
        <input type="hidden" name="adults[${index}][email]" value="${member.email}">
        <input type="hidden" name="adults[${index}][role]" value="${member.role}">
        <input type="hidden" name="adults[${index}][name]" value="${member.name || ''}">
    `).join('');
}

function removeInvitation(index) {
    invited.splice(index, 1);
    renderInvited();
    updateHiddenInputs();
}
</script>
