<!-- Profile & Settings -->
<div class="min-h-screen bg-background-light pb-24">
    <!-- Header -->
    <div class="bg-gradient-to-br from-purple-500 to-blue-500 text-white px-6 py-8">
        <div class="max-w-4xl mx-auto flex items-center gap-4">
            <% if (profile && profile.avatar_url) { %>
                <img src="<%= profile.avatar_url %>" alt="Avatar" class="w-20 h-20 rounded-full border-4 border-white shadow-lg">
            <% } else { %>
                <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center border-4 border-white shadow-lg">
                    <span class="material-symbols-outlined text-white text-4xl filled">person</span>
                </div>
            <% } %>
            <div>
                <h1 class="text-3xl font-black mb-1">Mon profil</h1>
                <p class="text-white/90">Gérez vos informations personnelles</p>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-6 py-8">
        <div class="grid lg:grid-cols-3 gap-6">
            <!-- Sidebar Navigation -->
            <div class="space-y-4">
                <div class="bg-white rounded-2xl shadow-sm p-4">
                    <nav class="space-y-1">
                        <a href="#profile" onclick="showTab('profile')" id="tab-profile" 
                           class="flex items-center gap-3 px-4 py-3 rounded-xl font-bold text-primary bg-primary/10 transition">
                            <span class="material-symbols-outlined">person</span>
                            Profil
                        </a>
                        <a href="#account" onclick="showTab('account')" id="tab-account"
                           class="flex items-center gap-3 px-4 py-3 rounded-xl font-bold text-gray-600 hover:bg-gray-50 transition">
                            <span class="material-symbols-outlined">manage_accounts</span>
                            Compte
                        </a>
                        <a href="#notifications" onclick="showTab('notifications')" id="tab-notifications"
                           class="flex items-center gap-3 px-4 py-3 rounded-xl font-bold text-gray-600 hover:bg-gray-50 transition">
                            <span class="material-symbols-outlined">notifications</span>
                            Notifications
                        </a>
                        <a href="#privacy" onclick="showTab('privacy')" id="tab-privacy"
                           class="flex items-center gap-3 px-4 py-3 rounded-xl font-bold text-gray-600 hover:bg-gray-50 transition">
                            <span class="material-symbols-outlined">shield</span>
                            Confidentialité
                        </a>
                    </nav>
                </div>

                <div class="bg-gradient-to-br from-red-50 to-orange-50 rounded-2xl p-5">
                    <h3 class="font-bold text-gray-900 mb-2 flex items-center gap-2">
                        <span class="material-symbols-outlined text-red-600">logout</span>
                        Déconnexion
                    </h3>
                    <p class="text-sm text-gray-600 mb-3">Vous souhaitez quitter votre session?</p>
                    <a href="/auth/logout" class="block bg-red-500 text-white px-4 py-2 rounded-xl font-bold text-center hover:bg-red-600 transition">
                        Se déconnecter
                    </a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-2">
                <!-- Profile Tab -->
                <div id="content-profile" class="tab-content">
                    <div class="bg-white rounded-2xl shadow-sm p-8">
                        <h2 class="text-2xl font-black text-gray-900 mb-6">Informations personnelles</h2>
                        
                        <form method="POST" action="/profile/update" enctype="multipart/form-data">
                            <!-- Avatar -->
                            <div class="mb-6">
                                <label class="block text-sm font-bold text-gray-700 mb-3">Photo de profil</label>
                                <div class="flex items-center gap-6">
                                    <% if (profile && profile.avatar_url) { %>
                                        <img src="<%= profile.avatar_url %>" alt="Avatar" class="w-24 h-24 rounded-full object-cover">
                                    <% } else { %>
                                        <div class="w-24 h-24 bg-gradient-to-br from-purple-400 to-blue-500 rounded-full flex items-center justify-center">
                                            <span class="material-symbols-outlined text-white text-4xl filled">person</span>
                                        </div>
                                    <% } %>
                                    <div>
                                        <input type="file" id="avatar" name="avatar" accept="image/*" class="hidden">
                                        <button type="button" onclick="document.getElementById('avatar').click()"
                                                class="bg-primary text-white px-6 py-3 rounded-xl font-bold hover:shadow-lg transition mb-2">
                                            Changer la photo
                                        </button>
                                        <p class="text-xs text-gray-500">JPG, PNG ou GIF (max. 2MB)</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Name Fields -->
                            <div class="grid md:grid-cols-2 gap-4 mb-6">
                                <div>
                                    <label for="first_name" class="block text-sm font-bold text-gray-700 mb-2">Prénom</label>
                                    <input type="text" id="first_name" name="first_name" 
                                           value="<%= profile ? profile.first_name : '' %>"
                                           class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition">
                                </div>
                                <div>
                                    <label for="last_name" class="block text-sm font-bold text-gray-700 mb-2">Nom</label>
                                    <input type="text" id="last_name" name="last_name" 
                                           value="<%= profile ? profile.last_name : '' %>"
                                           class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition">
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="mb-6">
                                <label for="email" class="block text-sm font-bold text-gray-700 mb-2">Email</label>
                                <input type="email" id="email" name="email" 
                                       value="<%= user ? user.email : '' %>"
                                       class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition bg-gray-50"
                                       disabled>
                                <p class="text-xs text-gray-500 mt-1">L'email ne peut pas être modifié ici</p>
                            </div>

                            <!-- Bio -->
                            <div class="mb-6">
                                <label for="bio" class="block text-sm font-bold text-gray-700 mb-2">Biographie</label>
                                <textarea id="bio" name="bio" rows="4"
                                          class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition resize-none"
                                          placeholder="Parlez-nous de vous..."><%= profile ? profile.bio || '' : '' %></textarea>
                            </div>

                            <!-- Save Button -->
                            <button type="submit" class="w-full bg-primary text-white px-6 py-4 rounded-xl font-bold hover:shadow-xl transition">
                                Enregistrer les modifications
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Account Tab -->
                <div id="content-account" class="tab-content hidden">
                    <div class="bg-white rounded-2xl shadow-sm p-8">
                        <h2 class="text-2xl font-black text-gray-900 mb-6">Paramètres du compte</h2>
                        
                        <!-- Change Password -->
                        <div class="mb-8">
                            <h3 class="font-bold text-gray-900 mb-4">Changer le mot de passe</h3>
                            <form method="POST" action="/profile/change-password">
                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-sm font-bold text-gray-700 mb-2">Mot de passe actuel</label>
                                        <input type="password" name="current_password" required
                                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-bold text-gray-700 mb-2">Nouveau mot de passe</label>
                                        <input type="password" name="new_password" required
                                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-bold text-gray-700 mb-2">Confirmer le nouveau mot de passe</label>
                                        <input type="password" name="confirm_password" required
                                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition">
                                    </div>
                                    <button type="submit" class="bg-blue-500 text-white px-6 py-3 rounded-xl font-bold hover:shadow-lg transition">
                                        Mettre à jour le mot de passe
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Danger Zone -->
                        <div class="border-2 border-red-200 rounded-xl p-6 bg-red-50">
                            <h3 class="font-bold text-red-900 mb-2 flex items-center gap-2">
                                <span class="material-symbols-outlined">warning</span>
                                Zone dangereuse
                            </h3>
                            <p class="text-sm text-red-700 mb-4">Ces actions sont irréversibles</p>
                            <button onclick="confirmDeleteAccount()" class="bg-red-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-red-700 transition">
                                Supprimer mon compte
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Notifications Tab -->
                <div id="content-notifications" class="tab-content hidden">
                    <div class="bg-white rounded-2xl shadow-sm p-8">
                        <h2 class="text-2xl font-black text-gray-900 mb-6">Préférences de notification</h2>
                        
                        <div class="space-y-6">
                            <div class="flex items-center justify-between py-4 border-b">
                                <div>
                                    <h3 class="font-bold text-gray-900">Notifications par email</h3>
                                    <p class="text-sm text-gray-600">Recevoir des emails pour les activités importantes</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" checked class="sr-only peer">
                                    <div class="w-14 h-8 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-1 after:left-1 after:bg-white after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-primary"></div>
                                </label>
                            </div>

                            <div class="flex items-center justify-between py-4 border-b">
                                <div>
                                    <h3 class="font-bold text-gray-900">Messages</h3>
                                    <p class="text-sm text-gray-600">Notifications pour les nouveaux messages</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" checked class="sr-only peer">
                                    <div class="w-14 h-8 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-1 after:left-1 after:bg-white after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-primary"></div>
                                </label>
                            </div>

                            <div class="flex items-center justify-between py-4 border-b">
                                <div>
                                    <h3 class="font-bold text-gray-900">Activités familiales</h3>
                                    <p class="text-sm text-gray-600">Mises à jour sur les activités de vos enfants</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" checked class="sr-only peer">
                                    <div class="w-14 h-8 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-1 after:left-1 after:bg-white after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-primary"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Privacy Tab -->
                <div id="content-privacy" class="tab-content hidden">
                    <div class="bg-white rounded-2xl shadow-sm p-8">
                        <h2 class="text-2xl font-black text-gray-900 mb-6">Confidentialité et sécurité</h2>
                        
                        <div class="space-y-6">
                            <div>
                                <h3 class="font-bold text-gray-900 mb-2">Visibilité du profil</h3>
                                <select class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary focus:outline-none transition">
                                    <option>Visible pour tous les membres de mes familles</option>
                                    <option>Visible uniquement pour les administrateurs</option>
                                    <option>Privé</option>
                                </select>
                            </div>

                            <div class="pt-6 border-t">
                                <h3 class="font-bold text-gray-900 mb-4">Sessions actives</h3>
                                <div class="space-y-3">
                                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl">
                                        <div class="flex items-center gap-3">
                                            <span class="material-symbols-outlined text-green-600">computer</span>
                                            <div>
                                                <div class="font-bold text-sm text-gray-900">Session actuelle</div>
                                                <div class="text-xs text-gray-500">Chrome sur Windows - Maintenant</div>
                                            </div>
                                        </div>
                                        <span class="text-xs bg-green-100 text-green-700 px-3 py-1 rounded-full font-bold">Actif</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function showTab(tabName) {
    // Hide all tabs
    document.querySelectorAll('.tab-content').forEach(el => el.classList.add('hidden'));
    document.querySelectorAll('[id^="tab-"]').forEach(el => {
        el.classList.remove('text-primary', 'bg-primary/10');
        el.classList.add('text-gray-600');
    });
    
    // Show selected tab
    document.getElementById('content-' + tabName).classList.remove('hidden');
    const tabLink = document.getElementById('tab-' + tabName);
    tabLink.classList.add('text-primary', 'bg-primary/10');
    tabLink.classList.remove('text-gray-600');
}

function confirmDeleteAccount() {
    if (confirm('Êtes-vous sûr de vouloir supprimer votre compte? Cette action est irréversible.')) {
        // Handle account deletion
        window.location.href = '/profile/delete';
    }
}
</script>
