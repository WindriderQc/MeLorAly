<!-- Family Management Page -->
<div class="min-h-screen bg-gradient-to-br from-orange-50 to-pink-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <a href="/family/<%= family.id %>" class="text-primary hover:text-orange-600 mb-2 inline-block">
            ← Retour à la famille
          </a>
          <h1 class="text-4xl font-bold text-gray-900">Gérer la famille</h1>
          <p class="text-gray-600 mt-2"><%= family.name %></p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Family Settings -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Paramètres de la famille</h2>
          
          <form action="/family/<%= family.id %>/update" method="POST" class="space-y-6">
            <!-- Family Name -->
            <div>
              <label for="family_name" class="block text-sm font-medium text-gray-700 mb-2">
                Nom de la famille
              </label>
              <input 
                type="text" 
                id="family_name" 
                name="family_name" 
                value="<%= family.name %>"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              >
            </div>

            <!-- Family Avatar URL -->
            <div>
              <label for="avatar_url" class="block text-sm font-medium text-gray-700 mb-2">
                URL de l'avatar de la famille (optionnel)
              </label>
              <input 
                type="url" 
                id="avatar_url" 
                name="avatar_url" 
                value="<%= family.avatar_url || '' %>"
                placeholder="https://example.com/avatar.jpg"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent"
              >
            </div>

            <!-- Save Button -->
            <div class="flex justify-end">
              <button 
                type="submit" 
                class="bg-primary text-gray-900 px-6 py-3 rounded-xl font-semibold hover:bg-orange-600 transition-colors"
              >
                Enregistrer les modifications
              </button>
            </div>
          </form>
        </div>

        <!-- Members Management -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Membres (<%= members.length %>)</h2>
            <button 
              onclick="showInviteModal()"
              class="bg-primary text-gray-900 px-4 py-2 rounded-xl font-semibold hover:bg-orange-600 transition-colors"
            >
              + Inviter un membre
            </button>
          </div>

          <!-- Members List -->
          <div class="space-y-4">
            <% if (members.length === 0) { %>
              <p class="text-gray-500 text-center py-8">Aucun membre pour le moment</p>
            <% } else { %>
              <% members.forEach(member => { %>
                <div class="flex items-center justify-between p-4 border border-gray-200 rounded-xl hover:border-primary transition-colors">
                  <div class="flex items-center space-x-4">
                    <% if (member.profiles && member.profiles.avatar_url) { %>
                      <img src="<%= member.profiles.avatar_url %>" alt="Avatar" class="w-12 h-12 rounded-full object-cover">
                    <% } else { %>
                      <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center text-gray-900 font-bold text-lg">
                        <%= member.profiles && member.profiles.full_name ? member.profiles.full_name.charAt(0).toUpperCase() : '?' %>
                      </div>
                    <% } %>
                    <div>
                      <h3 class="font-semibold text-gray-900">
                        <%= member.profiles ? member.profiles.full_name : 'Utilisateur inconnu' %>
                      </h3>
                      <p class="text-sm text-gray-600">
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium
                          <%= member.role === 'admin' ? 'bg-purple-100 text-purple-700' : 
                              member.role === 'parent' ? 'bg-blue-100 text-blue-700' : 
                              'bg-green-100 text-green-700' %>">
                          <%= member.role === 'admin' ? 'Administrateur' : 
                              member.role === 'parent' ? 'Parent' : 
                              'Grands-parents' %>
                        </span>
                      </p>
                    </div>
                  </div>
                  
                  <% if (member.user_id !== user.id) { %>
                    <div class="flex items-center space-x-2">
                      <select 
                        onchange="updateMemberRole('<%= member.id %>', this.value)"
                        class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-primary focus:border-transparent"
                      >
                        <option value="parent" <%= member.role === 'parent' ? 'selected' : '' %>>Parent</option>
                        <option value="grandparent" <%= member.role === 'grandparent' ? 'selected' : '' %>>Grands-parents</option>
                        <option value="admin" <%= member.role === 'admin' ? 'selected' : '' %>>Admin</option>
                      </select>
                      <button 
                        onclick="removeMember('<%= member.id %>')"
                        class="text-red-600 hover:text-red-800 p-2"
                        title="Retirer ce membre"
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      </button>
                    </div>
                  <% } else { %>
                    <span class="text-sm text-gray-500">C'est vous</span>
                  <% } %>
                </div>
              <% }); %>
            <% } %>
          </div>
        </div>

        <!-- Children Management -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Enfants (<%= children.length %>)</h2>
            <a
              href="/children/create?family_id=<%= family.id %>"
              class="bg-primary text-gray-900 px-4 py-2 rounded-xl font-semibold hover:bg-orange-600 transition-colors inline-block"
            >
              + Ajouter un enfant
            </a>
          </div>

          <!-- Children Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% if (children.length === 0) { %>
              <p class="text-gray-500 text-center py-8 col-span-2">Aucun enfant pour le moment</p>
            <% } else { %>
              <% children.forEach(child => { %>
                <div class="border border-gray-200 rounded-xl p-4 hover:border-primary transition-colors">
                  <div class="flex items-start justify-between">
                    <div class="flex items-start space-x-3">
                      <% if (child.avatar_url) { %>
                        <img src="<%= child.avatar_url %>" alt="Avatar" class="w-12 h-12 rounded-full object-cover">
                      <% } else { %>
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-400 to-pink-400 flex items-center justify-center text-white font-bold">
                          <%= child.name.charAt(0).toUpperCase() %>
                        </div>
                      <% } %>
                      <div>
                        <h3 class="font-semibold text-gray-900"><%= child.name %></h3>
                        <% const birthDate = new Date(child.birthdate); %>
                        <% const age = Math.floor((new Date() - birthDate) / (365.25 * 24 * 60 * 60 * 1000)); %>
                        <p class="text-sm text-gray-600"><%= age %> ans</p>
                        <% if (child.grade) { %>
                          <p class="text-xs text-gray-500"><%= child.grade %></p>
                        <% } %>
                      </div>
                    </div>
                    <button 
                      onclick="editChild('<%= child.id %>')"
                      class="text-primary hover:text-orange-600"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              <% }); %>
            <% } %>
          </div>
        </div>

      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        
        <!-- Pending Invitations -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Invitations en attente</h3>
          
          <% if (invitations.length === 0) { %>
            <p class="text-gray-500 text-sm">Aucune invitation en attente</p>
          <% } else { %>
            <div class="space-y-3">
              <% invitations.forEach(invitation => { %>
                <div class="p-3 bg-gray-50 rounded-lg">
                  <p class="text-sm font-medium text-gray-900"><%= invitation.email %></p>
                  <p class="text-xs text-gray-600 mt-1">
                    Envoyée le <%= new Date(invitation.created_at).toLocaleDateString('fr-FR') %>
                  </p>
                  <button 
                    onclick="cancelInvitation('<%= invitation.id %>')"
                    class="text-xs text-red-600 hover:text-red-800 mt-2"
                  >
                    Annuler
                  </button>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>

        <!-- Danger Zone -->
        <div class="bg-red-50 border border-red-200 rounded-2xl p-6">
          <h3 class="text-lg font-bold text-red-900 mb-4">Zone de danger</h3>
          
          <button 
            onclick="confirmDeleteFamily()"
            class="w-full bg-red-600 text-white px-4 py-3 rounded-xl font-semibold hover:bg-red-700 transition-colors"
          >
            Supprimer la famille
          </button>
          
          <p class="text-xs text-red-600 mt-3">
            Cette action est irréversible. Toutes les données seront supprimées définitivement.
          </p>
        </div>

      </div>

    </div>

  </div>
</div>

<!-- Invite Member Modal -->
<div id="invite-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-2xl shadow-xl p-8 max-w-md w-full">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Inviter un nouveau membre</h2>
      <button onclick="closeInviteModal()" class="text-gray-500 hover:text-gray-800">&times;</button>
    </div>
    <form id="invite-form">
      <div class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary">
        </div>
        <div>
          <label for="role" class="block text-sm font-medium text-gray-700 mb-2">Rôle</label>
          <select id="role" name="role" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary">
            <option value="member">Membre</option>
            <option value="admin">Administrateur</option>
          </select>
        </div>
      </div>
      <div class="mt-8 flex justify-end space-x-4">
        <button type="button" onclick="closeInviteModal()" class="px-6 py-3 bg-gray-200 text-gray-800 rounded-xl font-semibold hover:bg-gray-300">Annuler</button>
        <button type="submit" class="px-6 py-3 bg-primary text-gray-900 rounded-xl font-semibold hover:bg-orange-600">Envoyer l'invitation</button>
      </div>
    </form>
  </div>
</div>

<script>
  const familyId = '<%= family.id %>';

  // --- Modal Management ---
  const inviteModal = document.getElementById('invite-modal');
  const inviteForm = document.getElementById('invite-form');

  function showInviteModal() {
    inviteModal.classList.remove('hidden');
  }

  function closeInviteModal() {
    inviteModal.classList.add('hidden');
    inviteForm.reset();
  }

  inviteForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(inviteForm);
    const data = Object.fromEntries(formData.entries());

    try {
      const response = await fetch(`/family/${familyId}/invite`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (!response.ok) {
        const { error } = await response.json();
        throw new Error(error);
      }

      alert('Invitation envoyée avec succès!');
      location.reload();
    } catch (error) {
      alert(`Erreur: ${error.message}`);
    }
  });


  // --- Member Actions ---
  async function updateMemberRole(memberId, newRole) {
    try {
      const response = await fetch(`/family/${familyId}/member/${memberId}/role`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ role: newRole }),
      });

      if (!response.ok) {
        const { error } = await response.json();
        throw new Error(error);
      }

      alert('Rôle mis à jour avec succès.');
      location.reload(); // Or update UI dynamically
    } catch (error) {
      alert(`Erreur: ${error.message}`);
      location.reload(); // Reload to reset dropdown on failure
    }
  }

  async function removeMember(memberId) {
    if (confirm('Êtes-vous sûr de vouloir retirer ce membre ?')) {
      try {
        const response = await fetch(`/family/${familyId}/member/${memberId}`, {
          method: 'DELETE',
        });

        if (!response.ok) {
          const { error } = await response.json();
          throw new Error(error);
        }

        alert('Membre retiré avec succès.');
        location.reload();
      } catch (error) {
        alert(`Erreur: ${error.message}`);
      }
    }
  }

  // --- Invitation Actions ---
  async function cancelInvitation(invitationId) {
    if (confirm('Annuler cette invitation ?')) {
      try {
        const response = await fetch(`/family/${familyId}/invitation/${invitationId}`, {
          method: 'DELETE',
        });

        if (!response.ok) {
          const { error } = await response.json();
          throw new Error(error);
        }

        alert('Invitation annulée.');
        location.reload();
      } catch (error) {
        alert(`Erreur: ${error.message}`);
      }
    }
  }

  // --- Placeholder Functions ---
  function showAddChildModal() {
    alert('Ajout d\'enfant à implémenter');
  }

  function editChild(childId) {
    alert('Modification d\'enfant à implémenter: ' + childId);
  }

  function confirmDeleteFamily() {
    if (confirm('ATTENTION: Êtes-vous absolument sûr de vouloir supprimer cette famille ? Cette action est irréversible !')) {
      if (confirm('Dernière confirmation - Toutes les données seront perdues. Continuer ?')) {
        alert('Suppression de famille à implémenter');
      }
    }
  }
</script>
