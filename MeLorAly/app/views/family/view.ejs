<!-- Family View Page -->
<div class="min-h-screen bg-background-light pb-24">
    <!-- Header -->
    <div class="bg-gradient-to-br from-primary to-pink-400 text-white px-6 py-12">
        <div class="max-w-6xl mx-auto">
            <div class="flex items-center justify-between mb-6">
                <a href="/family" class="flex items-center gap-2 text-white/90 hover:text-white transition">
                    <span class="material-symbols-outlined">arrow_back</span>
                    <span class="font-medium">Retour aux familles</span>
                </a>
                <a href="/family/<%= family.id %>/manage" class="w-10 h-10 rounded-full bg-white/20 hover:bg-white/30 transition flex items-center justify-center">
                    <span class="material-symbols-outlined">settings</span>
                </a>
            </div>
            
            <div class="flex items-center gap-4">
                <% if (family.avatar_url) { %>
                    <img src="<%= family.avatar_url %>" alt="<%= family.name %>" class="w-20 h-20 rounded-full object-cover border-4 border-white/20">
                <% } else { %>
                    <div class="w-20 h-20 rounded-full bg-white/20 flex items-center justify-center">
                        <span class="material-symbols-outlined text-4xl">group</span>
                    </div>
                <% } %>
                <div>
                    <h1 class="text-4xl font-black"><%= family.name %></h1>
                    <p class="text-white/80 mt-1">
                        <%= members.length %> membre<%= members.length > 1 ? 's' : '' %> · 
                        <%= children.length %> enfant<%= children.length > 1 ? 's' : '' %>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-6xl mx-auto px-6 py-8">
        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Children Section -->
                <div class="bg-white rounded-2xl shadow-sm p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-black text-gray-900">Enfants</h2>
                        <button onclick="addChild()" class="bg-primary text-gray-900 px-4 py-2 rounded-full text-sm font-bold hover:shadow-lg transition">
                            <span class="material-symbols-outlined text-sm align-middle">add</span>
                            Ajouter
                        </button>
                    </div>

                    <% if (children.length === 0) { %>
                        <div class="text-center py-12">
                            <span class="material-symbols-outlined text-6xl text-gray-300 block mb-4">child_care</span>
                            <p class="text-gray-600 mb-4">Aucun enfant ajouté pour l'instant</p>
                            <button onclick="addChild()" class="text-primary font-bold hover:underline">
                                Ajouter le premier enfant
                            </button>
                        </div>
                    <% } else { %>
                        <div class="grid md:grid-cols-2 gap-4">
                            <% children.forEach(child => { %>
                                <div class="border-2 border-gray-100 rounded-xl p-4 hover:border-primary transition">
                                    <div class="flex items-center gap-3 mb-3">
                                        <% if (child.avatar_url) { %>
                                            <img src="<%= child.avatar_url %>" alt="<%= child.name %>" class="w-12 h-12 rounded-full object-cover">
                                        <% } else { %>
                                            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-400 to-purple-400 flex items-center justify-center text-white font-bold">
                                                <%= child.name.charAt(0) %>
                                            </div>
                                        <% } %>
                                        <div class="flex-1">
                                            <h3 class="font-bold text-gray-900"><%= child.name %></h3>
                                            <% if (child.birth_date) { %>
                                                <p class="text-sm text-gray-600">
                                                    <%= Math.floor((new Date() - new Date(child.birth_date)) / (365.25 * 24 * 60 * 60 * 1000)) %> ans
                                                </p>
                                            <% } %>
                                        </div>
                                    </div>
                                    <% if (child.grade) { %>
                                        <div class="flex items-center gap-2 text-sm text-gray-600">
                                            <span class="material-symbols-outlined text-base">school</span>
                                            <span><%= child.grade %></span>
                                        </div>
                                    <% } %>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>

                <!-- Activity Feed -->
                <div class="bg-white rounded-2xl shadow-sm p-6">
                    <h2 class="text-2xl font-black text-gray-900 mb-6">Activités récentes</h2>
                    <div class="space-y-4">
                        <div class="flex items-start gap-3 p-3 bg-gray-50 rounded-xl">
                            <span class="material-symbols-outlined text-primary">celebration</span>
                            <div class="flex-1">
                                <p class="text-gray-900"><strong><%= family.name %></strong> créée avec succès!</p>
                                <p class="text-sm text-gray-600">Il y a quelques instants</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Members Card -->
                <div class="bg-white rounded-2xl shadow-sm p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="font-black text-gray-900">Membres</h3>
                        <a href="/family/<%= family.id %>/manage" class="text-primary hover:underline text-sm font-bold">
                            <span class="material-symbols-outlined text-sm align-middle">settings</span>
                            Gérer
                        </a>
                    </div>

                    <div class="space-y-3">
                        <% if (members.length === 0) { %>
                            <p class="text-gray-500 text-center py-4">Aucun membre pour le moment.</p>
                        <% } else { %>
                            <% members.forEach(member => { %>
                                <div class="flex items-center p-2 rounded-lg">
                                    <div class="flex items-center space-x-3 flex-1">
                                        <% if (member.profiles && member.profiles.avatar_url) { %>
                                            <img src="<%= member.profiles.avatar_url %>" alt="Avatar" class="w-10 h-10 rounded-full object-cover">
                                        <% } else { %>
                                            <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-gray-900 font-bold">
                                                <%= member.profiles && member.profiles.full_name ? member.profiles.full_name.charAt(0).toUpperCase() : '?' %>
                                            </div>
                                        <% } %>
                                        <div>
                                            <h4 class="font-semibold text-gray-900 text-sm">
                                                <%= member.profiles ? member.profiles.full_name : 'Utilisateur inconnu' %>
                                            </h4>
                                            <p class="text-xs text-gray-600">
                                                <span class="inline-block px-2 py-0.5 rounded-full text-xs font-medium
                                                    <%= member.role === 'admin' ? 'bg-purple-100 text-purple-700' : 'bg-green-100 text-green-700' %>">
                                                    <%= member.role === 'admin' ? 'Administrateur' : 'Membre' %>
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-2xl shadow-sm p-6">
                    <h3 class="font-black text-gray-900 mb-4">Actions rapides</h3>
                    <div class="space-y-2">
                        <a href="/messages?family=<%= family.id %>" class="flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 transition">
                            <span class="material-symbols-outlined text-primary">chat</span>
                            <span class="font-medium text-gray-900">Messages</span>
                        </a>
                        <a href="/children/create?family_id=<%= family.id %>" class="w-full flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 transition text-left">
                            <span class="material-symbols-outlined text-primary">child_care</span>
                            <span class="font-medium text-gray-900">Ajouter un enfant</span>
                        </a>
                        <button onclick="inviteMember()" class="w-full flex items-center gap-3 p-3 rounded-xl hover:bg-gray-50 transition text-left">
                            <span class="material-symbols-outlined text-primary">person_add</span>
                            <span class="font-medium text-gray-900">Inviter un membre</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function inviteMember() {
    alert('Inviter un membre - À venir!');
}
</script>
