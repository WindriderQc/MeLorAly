<!-- 404 Error Page -->
<div class="min-h-screen bg-background-light flex items-center justify-center px-6 py-12">
    <div class="max-w-2xl mx-auto text-center">
        <!-- Error Icon -->
        <div class="mb-8">
            <span class="material-symbols-outlined text-primary" style="font-size: 160px;">
                sentiment_dissatisfied
            </span>
        </div>

        <!-- Error Number -->
        <h1 class="text-9xl font-black text-gray-900 mb-4">404</h1>
        
        <!-- Error Message -->
        <h2 class="text-3xl font-black text-gray-900 mb-4">Page non trouvée</h2>
        
        <p class="text-xl text-gray-600 mb-8">
            Désolé, la page que vous recherchez n'existe pas ou a été déplacée.
        </p>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href="/" 
               class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-full font-bold hover:shadow-xl transition transform hover:scale-105">
                <span class="material-symbols-outlined">home</span>
                Retour à l'accueil
            </a>
            
            <% if (user) { %>
                <a href="/dashboard" 
                   class="inline-flex items-center gap-2 bg-white text-gray-700 px-8 py-4 rounded-full font-bold border-2 border-gray-200 hover:border-primary hover:text-primary transition">
                    <span class="material-symbols-outlined">dashboard</span>
                    Tableau de bord
                </a>
            <% } %>
        </div>

        <!-- Helpful Links -->
        <div class="mt-12 pt-8 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-4 font-bold">Peut-être cherchez-vous:</p>
            <div class="flex flex-wrap gap-3 justify-center">
                <% if (!user) { %>
                    <a href="/auth/login" class="text-sm text-primary hover:underline">Connexion</a>
                    <span class="text-gray-300">•</span>
                    <a href="/auth/signup" class="text-sm text-primary hover:underline">Créer un compte</a>
                    <span class="text-gray-300">•</span>
                <% } %>
                <a href="/faq" class="text-sm text-primary hover:underline">Questions fréquentes</a>
                <span class="text-gray-300">•</span>
                <a href="/contact" class="text-sm text-primary hover:underline">Nous contacter</a>
            </div>
        </div>
    </div>
</div>