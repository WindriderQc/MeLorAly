<div class="min-h-screen pb-24" style="background: var(--color-bg);">
    <div class="px-6 py-10" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%); color: var(--color-on-primary);">
        <div class="max-w-4xl mx-auto">
            <a href="/family/<%= familyId %>" class="inline-flex items-center gap-2 text-sm" style="color: rgba(255, 255, 255, 0.8);">
                <span class="material-symbols-outlined text-base">arrow_back</span>
                Retour à la famille
            </a>
            <h1 class="text-4xl font-black mt-4">Ajouter un enfant</h1>
            <p class="mt-2 text-sm" style="color: rgba(255, 255, 255, 0.85);">Ajoutez un enfant à <%= familyName %> pour suivre son parcours scolaire ensemble.</p>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-6 -mt-10">
        <form action="/children/create" method="POST" class="bg-white rounded-2xl shadow-card p-6 space-y-6">
            <input type="hidden" name="family_id" value="<%= familyId %>">
            
            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <label for="child-name" class="block text-sm font-medium mb-2" style="color: var(--color-muted);">Nom complet<span class="text-red-500"> *</span></label>
                    <input type="text" id="child-name" name="name" value="<%= formValues.name || '' %>" class="w-full px-4 py-3 rounded-xl border focus:outline-none focus:ring-2" style="border-color: var(--color-border); color: var(--color-text);" placeholder="Ex: Mila Dupont" required>
                    <% if (errors.name) { %>
                        <p class="mt-2 text-sm" style="color: var(--color-danger);"><%= errors.name %></p>
                    <% } %>
                </div>
                <div>
                    <label for="child-birth-date" class="block text-sm font-medium mb-2" style="color: var(--color-muted);">Date de naissance</label>
                    <input type="date" id="child-birth-date" name="birth_date" value="<%= formValues.birth_date || '' %>" class="w-full px-4 py-3 rounded-xl border focus:outline-none focus:ring-2" style="border-color: var(--color-border); color: var(--color-text);">
                    <% if (errors.birth_date) { %>
                        <p class="mt-2 text-sm" style="color: var(--color-danger);"><%= errors.birth_date %></p>
                    <% } %>
                </div>
            </div>
            <div>
                <label for="child-grade" class="block text-sm font-medium mb-2" style="color: var(--color-muted);">Niveau scolaire</label>
                <input type="text" id="child-grade" name="grade" value="<%= formValues.grade || '' %>" class="w-full px-4 py-3 rounded-xl border focus:outline-none focus:ring-2" style="border-color: var(--color-border); color: var(--color-text);" placeholder="Ex: CE2, Maternelle, 6ème">
                <% if (errors.grade) { %>
                    <p class="mt-2 text-sm" style="color: var(--color-danger);"><%= errors.grade %></p>
                <% } %>
            </div>

            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 pt-4 border-t" style="border-color: var(--color-border);">
                <div class="text-sm" style="color: var(--color-muted);">
                    Les informations seront visibles par tous les membres de <strong style="color: var(--color-text);"><%= familyName %></strong>.
                </div>
                <div class="flex flex-col sm:flex-row gap-3">
                    <a href="/family/<%= familyId %>" class="px-5 py-3 rounded-full text-center font-semibold" style="background: var(--color-secondary-50); color: var(--color-secondary);">Annuler</a>
                    <button type="submit" class="px-6 py-3 rounded-full font-semibold" style="background: var(--color-primary); color: var(--color-on-primary);">
                        <span class="material-symbols-outlined text-sm mr-1" style="vertical-align: middle;">add</span>
                        Ajouter l'enfant
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
