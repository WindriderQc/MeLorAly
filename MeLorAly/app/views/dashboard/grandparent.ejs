                    <span class="material-symbols-outlined text-pink-600 filled">child_care</span>
                </div>
                <div class="text-2xl font-bold text-gray-900"><%= children.length %></div>
                <div class="text-xs text-gray-500">Petits-enfants</div>
            </div>
            
            <div class="bg-white rounded-2xl shadow-lg p-4 text-center">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-2">
                    <span class="material-symbols-outlined text-blue-600 filled">photo_library</span>
                </div>
