<div class="row">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Tableau de bord</h2>
            <div class="btn-group" role="group">
                <a href="/family/create" class="btn btn-outline-primary">
                    <i class="bi bi-plus-circle me-1"></i>Créer une famille
                </a>
            </div>
        </div>

        <!-- Families Overview -->
        <div class="row g-3 mb-4">
            <% if (families.length === 0) { %>
                <div class="col-12">
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="bi bi-house-heart text-muted" style="font-size: 4rem;"></i>
                            <h4 class="mt-3 mb-3">Aucune famille configurée</h4>
                            <p class="text-muted mb-4">Commencez par créer votre première famille pour inviter vos proches.</p>
                            <a href="/family/create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Créer ma première famille
                            </a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <% families.forEach(familyMember => { %>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <% if (familyMember.families.avatar_url) { %>
                                        <img src="<%= familyMember.families.avatar_url %>" alt="Avatar famille" class="rounded-circle me-3" width="50" height="50">
                                    <% } else { %>
                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                            <i class="bi bi-people-fill text-white"></i>
                                        </div>
                                    <% } %>
                                    <div>
                                        <h5 class="mb-0"><%= familyMember.families.name %></h5>
                                        <small class="text-muted text-capitalize">
                                            <i class="bi bi-person-badge me-1"></i><%= familyMember.role %>
                                        </small>
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-between">
                                    <a href="/family/<%= familyMember.families.id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>Voir
                                    </a>
                                    <a href="/messages?family=<%= familyMember.families.id %>" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-chat-dots me-1"></i>Messages
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <!-- Children Overview -->
        <% if (children.length > 0) { %>
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-people-fill me-2"></i>Enfants
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <% children.forEach(child => { %>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <% if (child.avatar_url) { %>
                                            <img src="<%= child.avatar_url %>" alt="<%= child.name %>" class="rounded-circle mb-2" width="60" height="60">
                                        <% } else { %>
                                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center mb-2 mx-auto" style="width: 60px; height: 60px;">
                                                <i class="bi bi-person-fill text-white" style="font-size: 1.5rem;"></i>
                                            </div>
                                        <% } %>
                                        <h6 class="mb-1"><%= child.name %></h6>
                                        <% if (child.grade) { %>
                                            <small class="text-muted"><%= child.grade %></small>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-lightning-fill me-2"></i>Actions rapides
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/family/invite" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-person-plus me-2"></i>Inviter un membre
                    </a>
                    <a href="/children/add" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-plus-circle me-2"></i>Ajouter un enfant
                    </a>
                    <a href="/messages" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-chat-dots me-2"></i>Voir les messages
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Notifications -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-bell-fill me-2"></i>Notifications récentes
                </h6>
            </div>
            <div class="card-body">
                <% if (notifications.length === 0) { %>
                    <p class="text-muted text-center mb-0">
                        <i class="bi bi-bell-slash"></i><br>
                        Aucune notification
                    </p>
                <% } else { %>
                    <div class="list-group list-group-flush">
                        <% notifications.forEach(notification => { %>
                            <div class="list-group-item px-0 border-0">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1"><%= notification.title %></h6>
                                        <% if (notification.message) { %>
                                            <p class="mb-1 small text-muted"><%= notification.message %></p>
                                        <% } %>
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            <%= new Date(notification.created_at).toLocaleDateString('fr-FR') %>
                                        </small>
                                    </div>
                                    <% if (!notification.read) { %>
                                        <span class="badge bg-primary rounded-pill">Nouveau</span>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                    
                    <div class="text-center mt-3">
                        <a href="/notifications" class="btn btn-outline-secondary btn-sm">
                            Voir toutes les notifications
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>